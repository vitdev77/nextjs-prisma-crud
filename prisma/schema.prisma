generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  // series   Series[]

  @@map("brands")
}

model Series {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  // brands   Brand[]

  @@map("series")
}

model Product {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  color        ProductColor @default(WHITE)
  businessType BusinessType @default(OBM)
  brandId      Int
  seriesId     Int
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  brand  Brand  @relation(fields: [brandId], references: [id])
  series Series @relation(fields: [seriesId], references: [id])

  @@map("products")
}

enum BusinessType {
  OBM
  OEM
}

enum ProductColor {
  WHITE
  BLACK
  BEIGE
  BASALT_GRAY
  INOX
}
