generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Brand {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @unique

  models Model[]
  series Series[]

  @@map("brands")
}

model Series {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @unique

  models Model[]
  brands Brand[]

  @@map("series")
}

model Model {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name         String       @unique
  seriesId     Int
  brandId      Int
  // colorId      Int
  color        ModelColor   @default(WHITE)
  businessType BusinessType @default(OBM)

  series Series @relation(fields: [seriesId], references: [id])
  brand  Brand  @relation(fields: [brandId], references: [id])

  @@map("models")
}

model Color {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatadAt DateTime @updatedAt

  name     String  @unique
  atribute String?

  @@map("colors")
}

enum BusinessType {
  OBM
  OEM
}

enum ModelColor {
  WHITE
  BLACK
  BEIGE
  BASALT_GRAY
  INOX
}
