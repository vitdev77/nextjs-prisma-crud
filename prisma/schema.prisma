generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isUpdated Boolean  @default(false)

  products Product[]
  // series   Series[]

  @@map("brands")
}

model Series {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isUpdated Boolean  @default(false)

  products Product[]
  // brands   Brand[]

  @@map("series")
}

model Product {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  seriesAttr    SeriesAttr    @default(NONE)
  color         ProductColor  @default(WHITE)
  displayPlaced DisplayPlaced @default(ON_DOOR)
  businessType  BusinessType  @default(OBM)
  brandId       Int
  seriesId      Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  isUpdated     Boolean       @default(false)

  brand  Brand  @relation(fields: [brandId], references: [id], onDelete: Cascade)
  series Series @relation(fields: [seriesId], references: [id], onDelete: Cascade)

  @@map("products")
}

enum ProductColor {
  WHITE
  BLACK
  BEIGE
  BASALT_GRAY
  DARK_GRAY
  STEEL_GRAY
  INOX
  ENTRY_WHITE
  ENTRY_INOX
  PREMIUM_WHITE
  PREMIUM_INOX
}

enum DisplayPlaced {
  ON_DOOR
  INSIDE
}

enum BusinessType {
  OBM
  OEM
}

enum SeriesAttr {
  NONE
  CE_BCD345WE_ST
  CE_BCD345WE1_ST
  CE_BCD385WX1_JT
  CE_BCD385WX2_JT
  CE_BCD405WX_JQ
  CE_BCD445WX_JQ
  CE_BCD445WZ_JQ
  CE_BCD335WX_JQ
  CE_BCD375WX_JQ
}
